{% extends 'layout.html.twig' %}

{% block title %}Reset Password{% endblock %}


{% block stylesheets %}
    {{ parent() }}
    <link href="{{ asset('assets/css/app/main-panel.css') }}" rel="stylesheet" media="all">
{% endblock %}

{% block body %}
    <div class="container">
        <div class="panel panel-default col-md-offset-3 col-md-6 main-panel"  >
            <div class="panel-heading">Reset Password, Enter your new password below.</div>
            <div class="panel-body">
                {{ form_start(resetPasswordForm, {'attr': {'novalidate': 'novalidate'}}) }}
                {{ form_row(resetPasswordForm.plainPassword, {
                    'label' : 'New Password'
                }) }}

                <div class="form-group submit-btn-container">
                    <button type="submit" class="btn btn-success pull-right">Reset Password</button>
                </div>

                {{ form_end(resetPasswordForm) }}

            </div>
        </div>

    </div>
{% endblock %}